    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.pages.LoginServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pages.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.pages.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayMembers</servlet-name>
        <servlet-class>com.web.DisplayMembers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayClaims</servlet-name>
        <servlet-class>com.web.DisplayClaims</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.pages.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeClaimServlet</servlet-name>
        <servlet-class>com.web.MakeClaim</servlet-class>
    </servlet>
    <servlet>
        <description>Making a Payment for a Claim</description>
        <servlet-name>MakePaymentServlet</servlet-name>
        <servlet-class>com.web.Payment</servlet-class>
    </servlet>
    <servlet>
        <description>Check Membership Status of a User</description>
        <servlet-name>CheckMemberStatusServlet</servlet-name>
        <servlet-class>com.web.CheckMemberStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MembersDashboardServlet</servlet-name>
        <servlet-class>com.web.MembersDashboard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/doLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayMembers</servlet-name>
        <url-pattern>/DisplayMembers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayClaims</servlet-name>
        <url-pattern>/DisplayClaims</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeClaimServlet</servlet-name>
        <url-pattern>/Members/makeClaim_member</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakePaymentServlet</servlet-name>
        <url-pattern>/Members/makePayment_applied</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckMemberStatusServlet</servlet-name>
        <url-pattern>/Members/cehckstatus_applied</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MembersDashboardServlet</servlet-name>
        <url-pattern>/Members/membersDashboard_applied</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            20
        </session-timeout>
    </session-config>
</web-app>
